<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <RunConfiguration>
    <ResultsDirectory>TestResults</ResultsDirectory>
    <TargetPlatform>ARM64</TargetPlatform> <!-- or x64 for CI runners -->
    <TargetFrameworkVersion>net8.0</TargetFrameworkVersion>
    <DisableAppDomain>true</DisableAppDomain>
    <EnvironmentVariables>
      <DOTNET_ENVIRONMENT>CI</DOTNET_ENVIRONMENT>
      <RUNSETTINGS_LOADED>true</RUNSETTINGS_LOADED>
    </EnvironmentVariables>
  </RunConfiguration>
  <LoggerRunSettings>
    <Loggers>
      <Logger friendlyName="trx" enabled="true" />
    </Loggers>
  </LoggerRunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <OutputDirectory>TestResults</OutputDirectory>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
  <MSTest>
    <TestTimeout>30000</TestTimeout>
    <Parallelize>
      <Workers>4</Workers>
      <Scope>ClassLevel</Scope>
    </Parallelize>
  </MSTest>
</RunSettings>
